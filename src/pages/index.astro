---
import Layout from '../layouts/Layout.astro';
import Buscador from '../components/Buscador.astro';
---

<Layout title="Web-API Rick and Morty.">
	<main>
		<h1>RICK AND MORTY API</h1><hr>
	</main>
	<Buscador />
	
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	
	h1{
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	hr{
		text-align: center;
		margin-bottom: 1em;
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	
</style>
